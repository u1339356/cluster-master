172.21.0.5


rpm -Uvh https://yum.puppetlabs.com/puppetlabs-release-el-7.noarch.rpm
rpm -Uvh https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm

#invoke puppet agent test
puppet agent -t
